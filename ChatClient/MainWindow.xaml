<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="324" Width="455" HorizontalAlignment="Left" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,242,45">
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="28" Margin="163,10,-211,0" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Width="253" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="bConnDiscon" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="148" Height="28" Click="Button_Click"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="160" Margin="10,43,-211,0" VerticalAlignment="Top" Width="406" SelectionChanged="lbChat_SelectionChanged"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="76" Margin="10,208,-211,-36" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="406" TextChanged="tbMessage_TextChanged" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
